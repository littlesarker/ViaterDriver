<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:gravity="center"
    tools:context=".UpdateProfileActivity">


    <TextView
        android:textStyle="bold"
        android:textColor="#ED1809"
        android:layout_marginTop="15dp"
        android:text="Update profile"
        android:textSize="25sp"
        android:textAlignment="center"
        android:id="@+id/ttxt2323"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>


    <EditText
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_blank_round"
        android:layout_below="@id/ttxt2323"
        android:hint="Enter your Name"
        android:textAlignment="center"
        android:textSize="22sp"
        android:singleLine="true"
        android:id="@+id/UpdateNameID"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>

    <EditText
        android:layout_marginTop="15dp"
        android:hint="License Number"
        android:background="@drawable/bg_blank_round"
        android:layout_below="@id/UpdateNameID"
        android:textAlignment="center"
        android:textSize="22sp"
        android:singleLine="true"
        android:id="@+id/licenseID"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>

    <EditText
        android:layout_marginTop="15dp"
        android:hint="Enter Your Email"
        android:background="@drawable/bg_blank_round"
        android:layout_below="@id/licenseID"
        android:textAlignment="center"
        android:textSize="22sp"
        android:singleLine="true"
        android:id="@+id/UpdatEemailID"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>



    <Button
        android:layout_marginTop="15dp"
        android:text="Request"
        android:layout_below="@id/UpdatEemailID"
        android:id="@+id/updateProfileSubmitID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</RelativeLayout>