<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context=".ProfileActivity">


    <LinearLayout
        android:id="@+id/LLID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/prfolepic"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/driver" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/NAmeLLID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LLID"
       >


        <androidx.cardview.widget.CardView
            android:id="@+id/CARD1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/UserName_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|center_horizontal"
                android:text="Name"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="8dp"
                android:text="@string/app_name"
                android:textSize="20sp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/LLMOBILE"
        android:layout_below="@id/NAmeLLID"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="10dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            >


            <TextView
                android:layout_gravity="center"
                android:gravity="center|center_horizontal"
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_phone"
                android:text="Mobile"
                android:textSize="20sp"
                android:textStyle="bold" />



        </androidx.cardview.widget.CardView>


    </RelativeLayout>


    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:layout_below="@id/LLMOBILE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:gravity="center"
            android:text="Driver level"
            android:textSize="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ProgressBar
            android:padding="10dp"
            android:max="100"
            android:progress="20"
            android:id="@+id/simpleProgressBar"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

        <TextView
            android:textStyle="bold"
            android:text="Diver Type : Normal"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="Total Trip : 10"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:text="Total Earning :20000"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>



</RelativeLayout>